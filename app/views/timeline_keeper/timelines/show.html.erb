<h1><%= @timeline.headline %></h1>

<% if !@events.blank? %>

<div class="row" style="width:100%;height:500px">
  <div id="timeline-embed"></div>
</div>
    <script type="text/javascript">

        var timeline_config = {
            width:          "100%",
            height:         "100%",
            source:         '<%= timeline_path(@timeline, :format => :json) %>',
            start_at_end:   false,                          //OPTIONAL START AT LATEST DATE
            hash_bookmark:  true,                           //OPTIONAL LOCATION BAR HASHES
            font:           'PT',             //OPTIONAL FONT
            //lang:           'en',                           //OPTIONAL LANGUAGE
            maptype:        'watercolor',                   //OPTIONAL MAP STYLE
            css:            '<%= asset_path "verite_timeline/timeline.css" %>',     //OPTIONAL PATH TO CSS
            js:             '<%= asset_path "verite_timeline/timeline-min.js" %>'    //OPTIONAL PATH TO JS
        }
    </script>
    
<%= javascript_include_tag 'verite_timeline/timeline-embed' %>

<% end -%>

<h2>All events on this timeline</h2>
<%= render :partial => '/timeline_keeper/other_events', :locals => {:events => @events_all} %>