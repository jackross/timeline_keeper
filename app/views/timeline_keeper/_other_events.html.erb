<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th style="width: 11em">Date</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% events.each do |event| %>
      <tr>
        <td><%= event.start_date %><br><%= event.end_date %></td>
        <td>
          <% if !event.media.blank? %>
            <%= link_to external_media_url(event), :target => '_blank' do %>
              <%= image_tag event.media, :style => 'max-width: 200px;max-height:200px;float:right' %>
            <% end -%>
          <% end -%>
          <b><%= event.headline %></b><br><%= event.text %><br>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>